#!/bin/bash

# ------------
# Compress given json string.
#
# @author  Bj√∂rn Hempel
# @version 1.0 (2017-05-14)
# ------------
compressJson()
{
    local json="$1"

    echo -n "$json" | sed 's/^[ \t]*//' | sed ':a;N;$!ba;s/\n//g' | sed 's/:[ ]\+"/:"/g' | sed 's/:[ ]\+\[/:\[/g' | sed 's/:[ ]\+{/:{/g'
}


